<?xml version="1.0" encoding="utf-8" ?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_marginTop="-20dp"
        android:layout_marginStart="-8dp"
        android:layout_marginEnd="-8dp"
        android:layout_marginBottom="-8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <!--TODO: Найти адекватные шрифты под всё это дело...
    ну и не быть дауном который юзает вердану частично...-->
    <TextView
            android:text="No transactions yet..."
            android:layout_width="409dp"
            android:layout_height="295dp"
            android:id="@+id/empty_tx" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
            app:layout_constraintBottom_toBottomOf="@+id/tx_history_list" app:layout_constraintVertical_bias="0.094"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:textSize="36sp"
            android:textStyle="bold|italic" android:textAlignment="center"/>
    <androidx.recyclerview.widget.RecyclerView
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_marginTop="49dp"
            android:layout_height="0dp"
            android:background="#d6d6d6"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:id="@+id/tx_history_list"
            tools:listitem="@layout/tx_item_receive"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginBottom="110dp"
            app:layout_constraintBottom_toBottomOf="@+id/constraintLayout5" android:layout_marginStart="8dp"/>
    <!--TODO:Ну и ещё пофикси названия лэйаутов а то как даун нумерацию юзаю-->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/onemoreshittexture"
            android:layout_marginTop="185dp"
            android:id="@+id/constraintLayout2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="-10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="-10dp"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout">
        <TextView
                android:text="Last transactions"
                android:textSize="20sp"
                android:textFontWeight="400"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:id="@+id/transactions_text"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="-10dp"
            android:layout_marginRight="-10dp"
            android:background="@drawable/wallet_background"
            android:id="@+id/constraintLayout"
            app:layout_constraintBottom_toTopOf="@+id/nav_view"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.01"
            app:layout_constraintHorizontal_bias="1.0">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/constraintLayout3"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toTopOf="parent">
            <TextView
                    android:text="MDC"
                    android:textSize="22dp"
                    android:textColor="#ffff"
                    android:shadowColor="#7F000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:fontFamily="@font/verdana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/mdc_name"
                    android:layout_marginTop="13dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    app:srcCompat="@drawable/logo_pic"
                    android:id="@+id/logo_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                    android:text="0"
                    android:textSize="36dp"
                    android:textColor="#ffff"
                    android:shadowColor="#7F000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:fontFamily="@font/verdanab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:id="@+id/wallet_balance"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/logo_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>
            <TextView
                    android:text=".00"
                    android:fontFamily="@font/verdanab"
                    android:textColor="#ffff"
                    android:shadowColor="#7F000000"
                    android:layout_marginTop="8dp"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:id="@+id/balance_kopeiky"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/wallet_balance"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.45"
                    android:layout_marginEnd="6dp"
                    app:layout_constraintEnd_toStartOf="@+id/mdc_name"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:id="@+id/shit"
                android:layout_marginTop="28dp"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_height="42dp"
                    android:layout_width="wrap_content"
                    android:background="@drawable/onemoreshittexture"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:id="@+id/constraintLayout4"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.0">
                <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#90000000"
                        android:id="@+id/view"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0.545"
                        app:layout_constraintStart_toEndOf="@+id/textView"
                        android:layout_marginStart="4dp"/>
                <TextView
                        android:text="Address"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView"
                        android:textColor="@android:color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginBottom="2dp"
                        android:layout_marginStart="4dp"
                        app:layout_constraintTop_toTopOf="@+id/view"
                        app:layout_constraintBottom_toBottomOf="@+id/view"/>
                <TextView
                        android:textSize="11sp"
                        android:text="                                     Loading...                                        "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/wallet_address"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/view"
                        app:layout_constraintBottom_toBottomOf="@+id/view"
                        app:layout_constraintStart_toEndOf="@+id/view"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="8dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <ImageButton
                    android:onClick="copy_address"
                    android:layout_width="36dp"
                    android:background="@color/colorPrimary"
                    android:layout_height="36dp"
                    android:textColor="@android:color/white"
                    app:srcCompat="@drawable/ic_copy"
                    android:id="@+id/copy_address_button"
                    app:layout_constraintStart_toEndOf="@+id/constraintLayout4"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toTopOf="@+id/constraintLayout4"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageButton
                android:onClick="refresh_click"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="#6f87ea"
                app:srcCompat="@android:drawable/ic_popup_sync"
                android:id="@+id/refresh_button"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:textSize="36dp"
                android:textColor="#ffff"
                android:shadowColor="#7F000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:fontFamily="@font/verdanab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:id="@+id/change_balance"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/constraintLayout3"
                app:layout_constraintVertical_bias="0.389" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/refresh_button" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.609"/>
        <TextView
                android:text="loading..."
                android:fontFamily="@font/verdanab"
                android:textColor="#E0E0E0"
                android:shadowColor="#7F000000"
                android:layout_marginTop="8dp"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/converted_balance"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout3" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/shit"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintVertical_bias="1.0" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="122dp"
            android:background="@drawable/onemoreshittexture"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="-10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="-10dp"
            android:layout_marginBottom="0dp"
            android:id="@+id/constraintLayout5"
            app:layout_constraintBottom_toBottomOf="parent">

        <Button
                android:id="@+id/send_button"
                android:onClick="open_graph"
                android:layout_marginStart="12dp"
                android:shadowColor="@android:color/white"
                android:textSize="18sp"
                android:text="EXPLORER"
                android:background="@android:color/white"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="48dp"
                android:paddingLeft="15dp"
                android:drawableLeft="@drawable/graph_icon" />

        <Button
                android:onClick="open_receiver"
                android:layout_marginEnd="12dp"
                android:shadowColor="@android:color/white"
                android:id="@+id/receive_button"
                android:textSize="18sp"
                android:text=" RECEIVE"
                android:background="@android:color/white"
                android:layout_height="48dp"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:paddingRight="15dp"
                android:drawableRight="@drawable/ic_receive"/>
    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/nav_view"
            android:layout_width="0dp"
            android:layout_marginLeft="-10dp"
            android:layout_marginRight="-10dp"
            android:layout_height="75dp"
            android:background="@drawable/wallet_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:itemIconTint="@android:color/white"
            app:itemTextColor="@android:color/white"
            app:menu="@menu/bottom_nav_menu"/>

    <ProgressBar
            android:id="@+id/history_progressbar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/empty_tx" />
</androidx.constraintlayout.widget.ConstraintLayout>