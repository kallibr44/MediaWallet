<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="77dp">
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shit"
        android:background="@drawable/bg_tx_send"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="8dp">
    <TextView
            android:textColor="@android:color/black"
            android:text="15.06.2019"
            android:shadowColor="#7F000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tx_date"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
    <TextView
            android:text="To:"
            android:shadowColor="#7F000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tx_username_text_from"
            android:layout_marginBottom="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tx_date"
            app:layout_constraintVertical_bias="0.421"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@+id/tx_username_receiver"/>
    <TextView
            android:text="loading..."
            android:shadowColor="#7F000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:textSize="13sp"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tx_username_receiver"
            android:layout_marginBottom="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tx_date"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tx_sum_block"
            android:background="@drawable/bg_tx_receive_sum"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@+id/tx_username_text_from">

        <TextView
                android:text="-"
                android:textSize="24sp"
                android:textColor="@android:color/holo_red_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tx_minus_simbol"
                android:layout_marginStart="6dp"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/summa_tx"
                app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:text="0"
                android:textSize="22sp"
                android:fontFamily="@font/verdanab"
                android:textColor="@android:color/holo_red_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/summa_tx"
                android:layout_marginTop="0dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="0dp"
                app:layout_constraintEnd_toStartOf="@+id/summa_tx_kopeyki_send"/>
        <TextView
                android:text=".00"
                android:textSize="16sp"
                android:fontFamily="@font/verdanab"
                android:textColor="@android:color/holo_red_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/summa_tx_kopeyki_send"
                android:layout_marginTop="9dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="4dp"
                app:layout_constraintEnd_toStartOf="@+id/textView3"/>
        <TextView
                android:text="MDC"
                android:textSize="14sp"
                android:textColor="@android:color/holo_red_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/verdana"
                android:id="@+id/textView3"
                android:layout_marginTop="3dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="6dp"
                app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
            android:text="123"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:id="@+id/tx_id_send"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="123"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:id="@+id/tx_type"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>